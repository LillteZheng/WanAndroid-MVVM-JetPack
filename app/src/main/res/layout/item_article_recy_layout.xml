<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bean"
            type="com.zhengsr.wanandroid_jetpack.bean.ArticleData" />
        <variable
            name="vm"
            type="com.zhengsr.wanandroid_jetpack.ui.viewmodel.HomeViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_search_pager_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorCard"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_article_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/content"
                app:layout_constraintStart_toStartOf="@+id/content"
                app:layout_constraintEnd_toEndOf="@id/content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:textColor="@color/main_color"
                android:text="@{bean.author}" />


            <TextView
                android:id="@+id/item_article_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{bean.niceDate}"
                android:textColor="@color/colorText"
                app:layout_constraintTop_toTopOf="@id/item_article_author"
                app:layout_constraintBottom_toBottomOf="@id/item_article_author"
                app:layout_constraintEnd_toEndOf="@+id/content"
                app:layout_constraintStart_toStartOf="@id/content"
                android:gravity="end"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/item_article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Android Handler: 手把手带你深入分析Handler机制源码,要写一个自己的APK，不然都不知道流程了"
                android:text="@{bean.title}"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/item_article_author"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/content"
                app:layout_constraintRight_toRightOf="@+id/content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/item_article_chapat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Android四大组件"
                android:text="@{bean.chapterName}"
                android:textColor="@color/colorText"
                app:layout_constraintTop_toBottomOf="@id/item_article_title"
                app:layout_constraintBottom_toBottomOf="@+id/content"
                app:layout_constraintLeft_toLeftOf="@+id/content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/item_article_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/item_article_chapat"
                app:layout_constraintBottom_toBottomOf="@id/item_article_chapat"
                app:layout_constraintRight_toRightOf="@+id/content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                app:collected="@{vm.isCollected}"
                android:src="@drawable/icon_like_article_not_selected" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>
